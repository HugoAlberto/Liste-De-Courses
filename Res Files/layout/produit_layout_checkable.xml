<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/itemLibelleProduitDsListe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/itemCheckBoxProdDsListe"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/itemQuantite"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/itemCheckBoxProdDsListe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/itemQuantite"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/itemLibelleProduitDsListe"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/itemCheckBoxProdDsListe"
        android:textSize="20sp" />

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Grocery shopping" >

    <Spinner
        android:id="@+id/spinnerListe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selectList" 
        android:background="#d4d4d4"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerListe"
        android:layout_marginTop="10dp"
        android:text="@string/selectedList"
        android:textAppearance="?android:attr/textAppearanceSmall" 
        android:background="#d4d4d4"/>

    <ExpandableListView
        android:id="@+id/expandableListViewProduits"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/buttonPoserDansCaddy"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="10dp"
        android:scrollbars="horizontal" >

    </ExpandableListView>

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/spinnerListe"
        android:background="#33B5E5" />

    <Button
        android:id="@+id/buttonPoserDansCaddy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/caddy" />

</RelativeLayout>